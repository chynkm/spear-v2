<div class="page-header">
  <h1>
    Servers
    <a href="<%= url('/hosts/new') %>" class="btn btn-primary pull-right"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span>&nbsp;Add</a>
  </h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>#</th>
        <th>Name</th>
        <th>URL</th>
        <th>Probe Interval</th>
      </tr>
    </thead>
    <tbody>
      <% if hosts %>
      <% i = 0 %>
      <% hosts.each do |host| %>
      <tr>
        <td><%= i+=1 %></td>
        <td><%= host.name %></td>
        <td><%= host.url %></td>
        <td><%= host.probe_interval %></td>
      </tr>
      <% end %>
      <% else %>
      <tr>
        <td colspan="4">There are no servers to list</td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= paginate hosts %>