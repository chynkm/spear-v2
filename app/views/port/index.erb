<div class="page-header">
  <h1>
    Ports
    <a href="<%= url('/ports/new') %>" class="btn btn-primary pull-right"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span>&nbsp;Add</a>
  </h1>
</div>
<div class="table-responsive">
  <table class="table table-striped table-condensed">
    <thead>
      <tr>
        <th>#</th>
        <th>Name</th>
        <th>Host</th>
        <th>Port</th>
        <th>Probe Interval (mins)</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% if ports.length > 0 %>
      <% i = ports.offset %>
      <% ports.each do |port| %>
      <tr>
        <td><%= i+=1 %></td>
        <td><%= port.name %></td>
        <td><%= port.host %></td>
        <td><%= port.port %></td>
        <td><%= port.probe_interval %></td>
        <td>
          <a href="<%= url("ports/#{port.id}") %>" class="btn btn-sm btn-info" data-toggle="tooltip" data-placement="top" title="View"><span class="glyphicon glyphicon-file" aria-hidden="true"></span></a>
          <a href="<%= url("ports/#{port.id}/edit") %>" class="btn btn-sm btn-warning" data-toggle="tooltip" data-placement="top" title="Edit"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
          <a href="<%= url("ports/#{port.id}/delete") %>" class="btn btn-sm btn-danger" data-toggle="tooltip" data-placement="top" title="Delete"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a>
        </td>
      </tr>
      <% end %>
      <% else %>
      <tr>
        <td colspan="5">There are no ports to list</td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
<%= paginate ports %>

<% content_for :js do %>
<script type="text/javascript">
$(function(){
  $('[data-toggle="tooltip"]').tooltip()
});
</script>
<% end %>


