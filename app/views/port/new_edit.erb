<% content_for :css do %>
  <%= css_url %w(ion_range/css/ion.rangeSlider.css ion_range/css/ion.rangeSlider.skinFlat.css) %>
<% end %>

<div class="page-header">
  <h1>Ports - Add</h1>
</div>
<form class="form-horizontal">
  <div class="form-group">
    <label for="name" class="col-sm-2 control-label">Host</label>
    <div class="col-sm-8">
      <input type="text" class="form-control" id="name" name="name" placeholder="Hostname or IP">
    </div>
  </div>
  <div class="form-group">
    <label for="name" class="col-sm-2 control-label">Port</label>
    <div class="col-sm-8">
      <input type="text" class="form-control" id="name" name="name" placeholder="Port number">
    </div>
  </div>
  <div class="form-group">
    <label for="name" class="col-sm-2 control-label">Name</label>
    <div class="col-sm-8">
      <input type="text" class="form-control" id="name" name="name" placeholder="Name">
    </div>
  </div>
  <div class="form-group">
    <label for="probe_interval" class="col-sm-2 control-label">Probe interval</label>
    <div class="col-sm-8 no_trailing">
      <input type="text" class="form-control" id="probe_interval" name="probe_interval" value="">
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-primary">Save</button>
    </div>
  </div>
</form>

<% content_for :js do %>
  <%= js_url %w(ion.rangeSlider.min.js app/portNewEdit.js) %>
<% end %>
